{
	"name": "kokopu",
	"version": "2.9.2",
	"description": "A JavaScript library implementing the chess game rules and providing tools to read/write the standard chess file formats.",
	"keywords": [
		"chess",
		"fen",
		"pgn",
		"uci",
		"games"
	],
	"bugs": "https://github.com/yo35/kokopu/issues",
	"repository": "github:yo35/kokopu",
	"license": "LGPL-3.0-or-later",
	"author": "Yoann Le Montagner <yo35@melix.net>",
	"contributors": [
		"Atin Malaviya <atinm.dev@gmail.com>",
		"Maksym Butsykin <mbutsykin@gmail.com>"
	],
	"funding": "https://www.paypal.com/donate?hosted_button_id=MP795VF4FXUDW",
	"main": "src/index.js",
	"files": [
		"demo",
		"graphics",
		"src",
		"test",
		".eslintrc.yml",
		".nycrc.yml"
	],
	"devDependencies": {
		"@yo35/tui-jsdoc-template": "^1.3.0",
		"browserify": "^17.0.0",
		"commander": "^9.4.0",
		"coveralls": "^3.1.1",
		"eslint": "^8.21.0",
		"jsdoc": "^3.6.11",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0",
		"ssh2-sftp-client": "^9.0.2",
		"typedoc": "^0.22.18",
		"typescript": "^4.7.4",
		"uglify-js": "^3.16.3",
		"unit.js": "^2.1.1"
	},
	"scripts": {
		"lint": "eslint demo src test",
		"preunit": "npm run build:lib",
		"unit": "nyc mocha --bail --sort",
		"test": "npm run lint && npm run unit",
		"publish_coverage": "nyc report --reporter=text-lcov | coveralls",
		"build": "make -f scripts/build.mk",
		"build:doc": "typedoc --options scripts/typedoc.json",
		"build:lib": "tsc --project scripts/tsconfig.json",
		"start": "typedoc --options scripts/typedoc.json --watch --preserveWatchOutput",
		"clean": "make -f scripts/build.mk clean",
		"predeploy": "npm run test && npm run build",
		"deploy": "npm publish && node scripts/deploy.js"
	}
}
